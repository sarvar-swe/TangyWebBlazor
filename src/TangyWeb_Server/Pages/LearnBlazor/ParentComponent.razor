@page "/learnblazor/parentcomponent"

<h1>Parent Child Relation</h1>

<CascadingValue Value="@MessageForGrandChild" Name="message">
    <CascadingValue Value="@LuckyNumber" Name="luckyNumber">
        <_ChildComponent OnButtonClick="ShowMessage" Title="This title is passed as parameter from Parent Component">
            <ChildContent>
                Render Fragment From Parent! WooHOO!
            </ChildContent>
            <DangerChildContent>
                Danger Content from Render Fragment! WooHOO!
            </DangerChildContent>
        </_ChildComponent>
    </CascadingValue>
</CascadingValue>

<p>@messageText</p>
<_AnotherChildComponent placeholder="Placeholder from parent" maxlength="5"></_AnotherChildComponent>

@* <_ChildComponent OnButtonClick="ShowMessage" Title="This is second child component">
</_ChildComponent> *@

@code{
    public string MessageForGrandChild = "This message is from your parent (ParentComponent)";
    public string LuckyNumber = "7";
    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "Tangy button clickded from child Component";
    }
}